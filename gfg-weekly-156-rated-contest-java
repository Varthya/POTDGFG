  long sum=0;
          for(int i=0;i<n;i++)
          {
           sum+=a[i];
            }
              long ma=0;
               for(int i=0;i<n;i++ )
               {  
                   long  x=a[i];
                   ma=Math.max(x,ma);
               }
               long  k=(2*sum)/n;
                 k=k+1;
                 if(k<ma)return ma;
                 return k;
        
