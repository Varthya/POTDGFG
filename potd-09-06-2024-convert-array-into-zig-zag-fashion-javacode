 for(int i=0;i<n-1;i++)
        {
            if(i%2==0)
            {
                if(arr[i]>arr[i+1])
                {
                    int x=arr[i];
                    arr[i]=arr[i+1];
                    arr[i+1]=x;
                }
            }
            else
            {
                if(arr[i]<arr[i+1])
                {
                    int x=arr[i];
                    arr[i]=arr[i+1];
                    arr[i+1]=x;
                }
            }
        }
